{% extends "@theme/base.html.twig" %}

{% block title %}{{ 'menu.games'|trans }}{% endblock %}

{% block head %}
    {{  parent() }}
{% endblock %}

{% block navbar %}
    <nav id="nav">
        <ul>
            <li><a href="{{ path('home') }}">{{ 'menu.home'|trans }}</a></li>
            <li><a href="{{ path('patron') }}">{{ 'menu.patron'|trans }}</a></li>
            <li><a href="{{ path('blog') }}">{{ 'menu.blog'|trans }}</a></li>
            <li><a href="{{ path('forum') }}">{{ 'menu.forum'|trans }}</a></li>
            <li><a href="{{ path('games') }}">{{ 'menu.games'|trans }}</a></li>
            <li><a href="{{ path('about') }}">{{ 'menu.about'|trans }}</a></li>
            <li><a href="{{ path('careers') }}">{{ 'menu.careers'|trans }}</a></li>
            <li><a href="{{ path('contact') }}">{{ 'menu.contact'|trans }}</a></li>
        </ul>
    </nav>
{% endblock %}

{% block body %}
    <div id="main-wrapper">
        <div id="main" class="container">
            <div class="row">
                <div class="12u">
                    <span class="content">

                        <article class="box page-content">
                            <header>
                                <h2>{{ 'title.games'|trans }}</h2>
                                <p>{{ 'about.gamesPage'|trans }}</p>
                            </header>
                            <section>
                                <div class="game_covers">
                                    <ul class="grid">
                                    {% for g in games %}
                                        <li>
                                            <a name="{{ g.our_game_short_title }}"></a>
                                            <a href="{{ g.our_game_url }}"><img class="game_covers_image" src="{{ g.our_game_urlcdn }}/images/covers/{{ g.our_game_cover }}.png" alt="{{ g.our_game_name }}" /></a>
                                        </li>
                                    {% endfor %}
                                    </ul>
                                </div>
                            </section>
                        </article>

                    </span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

