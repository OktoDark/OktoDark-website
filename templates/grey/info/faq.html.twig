{% extends "@theme/base.html.twig" %}

{% block title %}{{ 'title.faq'|trans }}{% endblock %}

{% block head %}
    {{  parent() }}
{% endblock %}

{% block body_id 'faq' %}

{% block main %}

    <section class="section section-page-title context-dark">
        <div class="container">
            <h2>{{ 'title.faq'|trans }}</h2>
        </div>
    </section>

    <section class="section section-lg bg-default">
        <div class="container">
            <div class="text-decoration">
                <dl class="list-terms">
                    <dt class="heading-4">{{ 'faq.one_title_txt'|trans }}</dt>
                    <dd>{{ 'faq.one_content_txt'|trans }}</dd>
                    <dt class="heading-4">{{ 'faq.two_title_txt'|trans }}</dt>
                    <dd>{{ 'faq.two_content_txt'|trans }}</dd>
                    <dt class="heading-4">{{ 'faq.three_title_txt'|trans }}</dt>
                    <dd>{{ 'faq.three_content_txt'|trans }}</dd>
                </dl>
            </div>
        </div>
    </section>

{% endblock %}