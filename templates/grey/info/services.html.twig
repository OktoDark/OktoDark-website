{% extends "@theme/base.html.twig" %}

{% block title %}{{ 'title.services'|trans }}{% endblock %}

{% block head %}
    {{  parent() }}
{% endblock %}

{% block body_id 'services' %}

{% block main %}

        <section class="section section-page-title context-dark">
            <div class="container">
                <h2>{{ 'title.services'|trans }}</h2>
            </div>
        </section>

        <section class="section section-lg bg-gray-100">
            <div class="container">
                <div class="row row-50 row-bordered">
                    <div class="container">
                        <div class="card-deck mb-3 text-center">

                            {% for e in services %}
                            <div class="card mb-4 box-shadow">
                                <div class="card-header">
                                    <h4 class="my-0 font-weight-normal">{{ e.serviceName }}</h4>
                                </div>
                                <div class="card-body">
                                    from
                                    <h3 class="card-title pricing-card-title"><i class="fas fa-euro-sign fa-xs"></i>{{ e.servicePrice }}<small class="text-muted">/ {{ e.serviceWorkDays }}</small></h3>
                                    <ul class="list-unstyled mt-3 mb-4">
                                        {{ e.serviceToDo|raw }}
                                    </ul>
                                    <a href="{{ path('contact') }}" class="btn btn-lg btn-block btn-primary">Contact us</a>
                                </div>
                            </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </section>

{% endblock %}