{% extends "@theme/base.html.twig" %}

{% block title %}{{ 'title.blog'|trans }}{% endblock %}

{% block head %}
    {{  parent() }}
{% endblock %}

{% block body_id 'blog' %}

{% block main %}

    <section class="section section-page-title context-dark">
        <div class="container">
            <h2>{{ 'title.blog'|trans }}</h2>
        </div>
    </section>

    <section class="section section-lg bg-default">
        <div class="container">
            <div class="row row-50">
                <div class="col-lg-8 col-xl-9">
                    {% for post in posts %}
                    <div class="post-creative">
                        <div class="author-block">
                            <figure class="author-img"><img src="#" alt="{{ post.author.fullname }}" width="114" height="114"/></figure>
                            <h4>{{ post.author.fullname }}</h4>
                            <h6>Blogger</h6>
                            <div class="divider"></div>
                        </div>
                        <div class="post-body">
                            <div class="post-classic-meta">
                                <ul class="list list-inline">
                                    <li><span class="icon icon-xs far fa-clock"></span> <span class="time">{{ post.publishedAt|localizeddate('long', 'medium', null, 'UTC') }}</span></li>
                                    <li><span class="icon icon-xs far fa-comments"></span> <!-- comment numbers --></li>
                                </ul>
                            </div>
                            <h5 class="post-title"><a href="{{ path('blog_post', {slug: post.slug}) }}">{{ post.title }}</a></h5>
                            <p>{{ post.summary|md2html }}</p><a class="button button-gradient" href="{{ path('blog_post', {slug: post.slug}) }}">Read More</a>
                        </div>
                    </div>
                    {% else %}
                        <div class="well">{{ 'post.no_posts_found'|trans }}</div>
                    {% endfor %}

                    {% if posts.haveToPaginate %}
                    <div class="row">
                        <div class="col-12">
                            <ul class="pagination">
                                <div class="navigation text-center">
                                    {{ pagerfanta(posts, 'twitter_bootstrap3_translated', {routeName: 'blog_index_paginated', routeParams: app.request.query.all}) }}
                                </div>
                            </ul>
                        </div>
                    </div>
                    {% endif %}
                </div>
                {% block sidebar %}
                    <div class="col-lg-4 col-xl-3">
                        <aside class="aside-components">
                            <div class="aside-component">
                                <h4 class="component-title">Search</h4>
                                <div class="search-form">
                                    <form class="rd-search" action="#"></form>
                                    <div class="form-wrap">
                                        <input class="form-input" id="rd-search-form-input" type="text" autocomplete="off"/>
                                        <button class="icon mdi mdi-magnify" type="submit"></button>
                                    </div>
                                </div>
                                </div>
                            </div>
                        </aside>

                    </div>
                {% endblock %}
            </div>
        </div>
    </section>
{% endblock %}