{% extends '@theme/base.html.twig' %}

{% block title %}{{ 'title.change_password'|trans }}{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block body_id 'user_password' %}

{% block main %}

    <section class="section section-page-title context-dark">
        <div class="container">
            <h2>{{ 'title.change_password'|trans }}</h2>
        </div>
    </section>

    <section class="section section-md bg-default text-center">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-md-9 col-lg-7 col-xl-5">
                    <div class="alert alert-info" role="alert">{{ 'info.change_password'|trans }}</div>

                    {{ form_start(form) }}
                    {{ form_widget(form) }}

                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
                    </button>
                    {{ form_end(form) }}

                </div>
                <div class="col-6 col-lg-4">
                    <a href="{{ path('user_change_password') }}">{{ 'change.password'|trans }}</a>
                    <br>
                    <a href="{{ path('user_edit') }}">{{ 'change.email_or_fullname'|trans }}</a>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

