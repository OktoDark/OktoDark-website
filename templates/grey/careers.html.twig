{% extends "@theme/base.html.twig" %}

{% block title %}{{ 'title.careers'|trans }}{% endblock %}

{% block head %}
    {{  parent() }}
{% endblock %}

{% block body_id 'careers' %}

{% block body %}

    <section class="section section-page-title context-dark">
        <div class="container">
            <h2>{{ 'title.careers'|trans }}</h2>
        </div>
    </section>

    <section class="section section-lg bg-default">
        <div class="container">
            <div class="text-decoration">
                <div class="card-group-custom card-group-corporate" id="accordion1" role="tablist" aria-multiselectable="false">
                    {% for c in careers %}
                    <article class="card card-custom card-corporate">
                        <div class="card-header" id="accordion1Heading{{ c.id }}" role="tab">
                            <div class="card-title">
                                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion1" href="#accordion1Collapse{{ c.id }}" aria-controls="accordion1Collapse{{ c.id }}">
                                    {{ c.jobtitle }} | Available: {{ c.number }}
                                    <div class="card-arrow"></div>
                                </a>
                            </div>
                        </div>
                        <div class="collapse" id="accordion1Collapse{{ c.id }}" role="tabpanel" aria-labelledby="accordion1Heading{{ c.id }}">
                            <div class="card-body">
                                <p>{{ c.requiments }}</p>
                                <div class="group-xl group-middle buttons-group">
                                    <a class="button button-sm button-gradient" href="#">Apply Now</a>
                                </div>
                            </div>
                        </div>
                    </article>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

{% endblock %}