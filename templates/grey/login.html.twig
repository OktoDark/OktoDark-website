{% extends '@theme/base.html.twig' %}

{% block title %}{{ 'title.login'|trans }}{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block body_id 'login' %}

{% block body %}

        <section class="section section-page-title context-dark">
            <div class="container">
                <h2>{{ 'title.login'|trans }}</h2>
            </div>
        </section>

        <section class="section section-md bg-default text-center">
            <div class="container">
                <div class="row justify-content-md-center">
                    <form method="post" class="rd-form rd-mailform rd-form-centered text-center">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <fieldset>
                            <legend><i class="fa fa-lock" aria-hidden="true"></i> {{ 'label.secure_sign_in'|trans }}</legend>
                            <div class="form-warp">
                                <label for="username" class="form-label form-label-outside">{{ 'label.email'|trans }}</label>
                                <input type="text" id="username" name="username" value="{{ last_username }}" class="form-input form-input-circle form-input-gray" required autofocus>
                            </div>
                            <div class="form-warp">
                                <label for="password" class="form-label form-label-outside">{{ 'label.password'|trans }}</label>
                                <input type="password" id="password" name="password" class="form-input form-input-circle form-input-gray" required>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="col-md-10">
                                <input type="checkbox" id="remember_me" name="_remember_me" checked />
                                <label for="remember_me">{{ 'checkbox.remember_me'|trans }}</label>
                            </div>
                            <input type="hidden" name="_target_path" value="home"/>
                            <button class="button button-block button-gradient button-circle" type="submit">
                                <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'action.sign_in'|trans }}
                            </button>
                        </fieldset>
                    </form>
                </div>
                <br>
                {{ 'content.login_note'|trans|raw }}
            </div>
        </section>

{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}