{% extends '@theme/base.html.twig' %}

{% block title %}{{ 'title.login'|trans }}{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block body_id 'login' %}

{% block main %}

        <section class="section section-page-title context-dark">
            <div class="container">
                <h2>{{ 'title.login'|trans }}</h2>
            </div>
        </section>

        <section class="section section-md bg-default text-center">
            <div class="container">
                <h class="row justify-content-md-center">
                    <form method="post" class="rd-form rd-mailform rd-form-centered text-center">
                        <fieldset>
                            {% if error %}
                                <h4 class="text-uppercase">{{ error.messageKey|trans(error.messageData, 'security') }}</h4>
                            {% endif %}
                            <legend><i class="fa fa-lock" aria-hidden="true"></i> {{ 'label.secure_sign_in'|trans }}</legend>
                            <div class="form-warp">
                                <label for="inputEmail" class="form-label form-label-outside">{{ 'label.username'|trans }}</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-input form-input-circle form-input-gray" required autofocus>
                            </div>
                            <div class="form-warp">
                                <label for="inputPassword" class="form-label form-label-outside">{{ 'label.password'|trans }}</label>
                                <input type="password" name="password" id="inputPassword" class="form-input form-input-circle form-input-gray" required>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                            <button class="button button-block button-gradient button-circle" type="submit">
                                <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'action.sign_in'|trans }}
                            </button>
                        </fieldset>
                    </form>
                </div>
                <br>
                {{ 'content.login_note'|trans|raw }}
            </div>
        </section>

{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}